    <div id="container">
        <h1><img src="/img/logo.png"></h1>
        <div id="content">
          <ul>
            <li><a href="/game">Iniciar Jogo</a></li>
          </ul>
        </div>
        <p style="text-align: center; font-size: 11px; margin-top: 2px;">Desenvolvido por Diogo Bemfica</p>
