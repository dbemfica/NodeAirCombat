<!doctype html>
<html lang="pt-Br">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Node Air Combat</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div id="container">
        <h1><img src="/img/logo.png"></h1>
        <p id="health">Vida: 100%</p>
        <p id="score">Pontos: 0</p>
        <canvas id="canvas"></canvas>
        <p style="text-align: center;">Acesse http://localhost:3000/joystick</p>
    </div>
    <img id="player" src="img/player.png" style="display: none;">
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/canvas.js"></script>
    <script>
        var imageBackgroud = null;
        var imgPlayer = null;
        var imgEnemy = null;
        async function main() {
            imageBackgroud = await loadImageBackgroud();
            imgPlayer = await loadImagePlayer();
            imgEnemy = await loadImageEnemy();
            canvas.addElement('canvas');
            const socket = io();

            var health = 100;
            var score = 0;

            socket.on('frame', (frame) => {
                let background = [
                    {
                        x: frame.background[0].x,
                        y: frame.background[0].y
                    },
                    {
                        x: frame.background[1].x,
                        y: frame.background[1].y
                    }
                ];
                canvas.loadBackground(background);
                canvas.addElements(frame.elements);
            });
            canvas.run();

            setInterval(() => {
                updateHealth(health);
                updateScore(score);
            },250);
        }

        main();

        function loadImageBackgroud() {
            return new Promise((resolve) => {
                imageBackgroud = new Image();
                imageBackgroud.src = "http://localhost:3000/img/map.png"
                imageBackgroud.onload = () => {
                    resolve(imageBackgroud)
                }
            })
        }

        function loadImagePlayer() {
            return new Promise((resolve) => {
                imgPlayer = new Image();
                imgPlayer.src = "http://localhost:3000/img/player.png"
                imgPlayer.onload = () => {
                    resolve(imgPlayer)
                }
            })
        }

        function loadImageEnemy() {
            return new Promise((resolve) => {
                imgEnemy = new Image();
                imgEnemy.src = "http://localhost:3000/img/enemy.png"
                imgEnemy.onload = () => {
                    resolve(imgEnemy)
                }
            })
        }

        function updateHealth(health) {
            let domHealth = document.getElementById('health');
            domHealth.innerHTML = "Vida: "+health+"%";
        }
        function updateScore(score) {
            let domScore = document.getElementById('score');
            domScore.innerHTML = "Pontos: "+score;
        }
    </script>
</body>
</html>
